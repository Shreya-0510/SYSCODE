# PowerGrid Flask Backend Environment Configuration
# Copy this file to .env and update values as needed

# Flask Configuration
FLASK_APP=app.py
FLASK_DEBUG=True
SECRET_KEY=powergrid-development-secret-key-change-in-production

# Database Configuration
DATABASE_URL=sqlite:///powergrid.db
SQLALCHEMY_ECHO=False

# API Configuration
API_RATE_LIMIT=100/hour
PORT=5000

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://127.0.0.1:5173

# ML Model Configuration
ML_MODEL_RETRAIN_INTERVAL=24
ML_MODEL_BACKUP_ENABLED=True
ML_PREDICTION_CACHE_TTL=3600

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=powergrid_backend.log

# Development Settings
DEVELOPMENT=True
ENABLE_MOCK_DATA=True

# Production Settings (uncomment for production)
# FLASK_DEBUG=False
# DATABASE_URL=postgresql://username:password@host:port/database
# SECRET_KEY=your-production-secret-key-here
# CORS_ORIGINS=https://yourdomain.com